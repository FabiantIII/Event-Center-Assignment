    <script>
      // Select the horizontal scroll container
      const slider = document.querySelector(".wine-scroll");

      // Variables used to track dragging state
      let isDown = false; // True when mouse is held down
      let startX; // Mouse position when drag starts
      let scrollLeft; // Slider's scroll position when drag starts

      // When user presses mouse button down
      slider.addEventListener("mousedown", (e) => {
        isDown = true; // User is now dragging
        slider.classList.add("active"); // Optional: for styling while dragging
        startX = e.pageX - slider.offsetLeft; // Mouse X relative to slider
        scrollLeft = slider.scrollLeft; // Save current scroll position
      });

      // When mouse leaves the container → stop dragging
      slider.addEventListener("mouseleave", () => {
        isDown = false;
      });

      // When mouse button is released → stop dragging
      slider.addEventListener("mouseup", () => {
        isDown = false;
      });

      // When user moves the mouse
      slider.addEventListener("mousemove", (e) => {
        if (!isDown) return; // Only run if dragging
        e.preventDefault(); // Stop text/image selection during drag

        // Current mouse X position relative to slider
        const x = e.pageX - slider.offsetLeft;

        // Distance moved since drag started
        const walk = (x - startX) * 2; // Multiply for faster scroll speed

        // Update scroll position (dragging effect)
        slider.scrollLeft = scrollLeft - walk;
      });
    </script>
